// script.js

document.getElementById("btn-hitung").addEventListener("click", function () {
  const nama = document.getElementById("nama").value.trim();
  const nilaiInput = document.getElementById("nilai").value.trim();

  if (!nama || !nilaiInput) {
    alert("Mohon isi nama dan nilai terlebih dahulu!");
    return;
  }

  // Ubah input jadi array angka
  const nilai = nilaiInput.split(",").map(n => parseFloat(n.trim()));

  if (nilai.some(isNaN)) {
    alert("Pastikan semua nilai berupa angka dan dipisahkan dengan koma (misalnya: 80,90,70)");
    return;
  }

  // Hitung rata-rata
  const total = nilai.reduce((sum, n) => sum + n, 0);
  const rataRata = total / nilai.length;

  // Tentukan grade
  let grade;
  if (rataRata >= 90) grade = "A";
  else if (rataRata >= 80) grade = "B";
  else if (rataRata >= 70) grade = "C";
  else if (rataRata >= 60) grade = "D";
  else grade = "E";

  // Tentukan komentar
  let komentar;
  switch (grade) {
    case "A": komentar = "GOKILLL 🔥"; break;
    case "B": komentar = "Boleh laa 😎"; break;
    case "C": komentar = "B aja sih 😐"; break;
    case "D": komentar = "r u serius? 😅"; break;
    default: komentar = "Pelajarin lagi derr 😭";
  }

  // Tampilkan hasil
  const hasilDiv = document.getElementById("hasil");
  hasilDiv.style.display = "block";
  hasilDiv.innerHTML = `
    <h3>Hasil Perhitungan</h3>
    <p><strong>Nama:</strong> ${nama}</p>
    <p><strong>Nilai-nilai:</strong> ${nilai.join(", ")}</p>
    <p><strong>Rata-rata:</strong> ${rataRata.toFixed(2)}</p>
    <p><strong>Grade:</strong> ${grade}</p>
    <p><strong>Komentar:</strong> ${komentar}</p>
  `;
});
